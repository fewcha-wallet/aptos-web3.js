{
  "name": "@fewcha/root",
  "version": "1.0.0",
  "author": "fewcha.app",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "lerna run build --npm-client=yarn --parallel --scope @fewcha/aptos --scope @fewcha/web3 --scope @fewcha/web3-react",
    "build-web3": "lerna run build --npm-client=yarn --parallel --scope @fewcha/aptos --scope @fewcha/web3",
    "test": "lerna run test --npm-client=yarn --stream",
    "publish": "lerna publish --no-private",
    "bs": "yarn bootstrap",
    "dev": "yarn workspace development",
    "web3": "yarn workspace @fewcha/web3",
    "link-all": "lerna exec --parallel yarn link",
    "unlink-all": "lerna exec --parallel --bail=false yarn unlink",
    "nx": "nx",
    "prepare": "husky install"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^17.2.0",
    "@types/node": "^18.11.9",
    "commitlint": "^17.2.0",
    "husky": "^8.0.1",
    "lerna": "^6.0.1",
    "lint-staged": "^13.0.3",
    "nx": "^15.0.10",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,json,md}": [
      "prettier --write"
    ]
  }
}
